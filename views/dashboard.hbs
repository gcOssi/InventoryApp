<!-- Products Table -->
<div class="content-card">
    <div class="card-header">
        <h3 class="card-title">Productos Recientes</h3>
        <button class="btn btn-primary">+ Agregar Producto</button>
    </div>
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>SKU</th>
                    <th>Categor√≠a</th>
                    <th>Stock</th>
                    <th>Precio</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                {{#each data.recentProducts}}
                <tr>
                    <td>{{this.name}}</td>
                    <td>{{this.sku}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.stock}}</td>
                    <td>${{this.price}}</td>
                    <td>
                        {{#if (this.isLowStock)}}
                            <span class="status-badge low-stock">Stock Bajo</span>
                        {{else}}
                            <span class="status-badge in-stock">En Stock</span>
                        {{/if}}
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>